<%- include('header') %>

<div class="posts-begin"></div>

<div class="post-write row">
    <div class="col-3"></div>
    <div class="col-1">
        <a class="" data-title="<%= nickname %>">
            <img class="avatar" src="/images/<%= avatar %>">
        </a>
    </div>
    <div class="col-5">
        <div class="post-border">
            <form method="POST" action="/write" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="exampleFormControlInput1">标题</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="title">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">内容</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="15" name="content"></textarea>
                </div>
                <button type="submit" class="form-control btn-primary btn">发布</button>

            </form>
        </div>
    </div>
</div>


<%- include('footer') %>