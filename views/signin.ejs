<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>NEWBLOG</title>
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <script src="https://cdn.bootcss.com/jquery/3.4.1/jquery.min.js"></script>

    <script src="https://cdn.bootcss.com/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous">
    </script>
    <script src="https://cdn.bootcss.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
    </script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <div class="container">
        <div class="posts-begin"></div>
        <%- include('components/notification') %>
        <div class="row">

            <div class="col-3"></div>
            <div class="col-6">
                <form class="form-signup" method="POST" action="/signin" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="InputEmail1">邮箱</label>
                        <input type="text" class="form-control" id="InputEmail" aria-describedby="emailHelp"
                            placeholder="Enter email" name="email">
                        <small id="emailHelp" class="form-text text-danger" style="display:none">请输入正确的邮箱地址</small>
                    </div>

                    <div class="form-group">
                        <label for="InputPassword2">密码</label>
                        <input type="password" class="form-control" id="InputPassword" placeholder="Enter password"
                            name="password">
                        <small id="passwordHelp" class="form-text text-danger" style="display:none">你还没有输入密码</small>
                    </div>

                    <button type="submit" class="btn btn-primary center">登录</button>
                </form>
            </div>
            <div class="col-3"></div>
        </div>


        <script>
            let isErr = [true, true];

            const handleEmailInput = () => {
                var pattern = /^[A-Za-z0-9\u4e00-\u9fa5]+@[a-zA-Z0-9_-]+(\.[a-zA-Z0-9_-]+)+$/;
                const address = $('#InputEmail').val();
                if (!pattern.test(address)) {
                    $('#emailHelp').css('display', 'inline');
                    isErr[0] = true;
                } else {
                    $('#emailHelp').css('display', 'none');
                    isErr[0] = false;
                }
            }

            const handlePasswordInput = () => {
                if ($('#InputPassword').val() == "") {
                    $('#passwordHelp').css('display', 'inline')
                    isErr[1] = true;
                } else {
                    $('#passwordHelp').css('display', 'none')
                    isErr[1] = false;
                }
            }

            $('#InputEmail').blur((e) => {
                handleEmailInput();
            })

            $('#InputPassword').blur((e) => {
                handlePasswordInput();
            })

            $('form').submit((e) => {

                handleEmailInput();
                handlePasswordInput();

                if (isErr[0] == true || isErr[1] == true) {
                    e.preventDefault();
                }
            })
        </script>


        <%- include('footer') %>