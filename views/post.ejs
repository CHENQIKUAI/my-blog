<%- include('header') %>
<div class="container">
    <h1 class="single-post-title">
        <%= post.title %>
    </h1>
    <div class="author">
        <img class="avatar" src="/images/<%= post.avatar %>">
        <div class="info">
            <span class="name"><%= post.nickname %></span>
            <div class="meta">
                <span>time</span>
                <span>字数</span>
                <span>阅读 <%= post.view %></span>
                <span>评论 0</span>
                <span>喜欢 <%= post.like %></span>
            </div>
        </div>
        <a href="/writer#/notebooks/32782678/notes/46773915" target="_blank" class="edit">编辑文章</a>
    </div>

    <div class="single-post-content">
        <%= post.content %>
    </div>

</div>

<%- include('footer') %>