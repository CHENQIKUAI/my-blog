<% if (success) { %>
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <div class="text-center text-success">
            <p><%= success %></p>
        </div>
        <% } %>

        <% if (error) { %>
        <div class="text-center text-danger">
            <p><%= error %></p>
        </div>
        <% } %>
    </div>

    <div class="col-3"></div>
</div>